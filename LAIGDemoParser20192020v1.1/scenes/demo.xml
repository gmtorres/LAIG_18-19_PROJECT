<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="demoTexture2" file="scenes/images/leaves.jpg" />
        <texture id="demoTexture3" file="scenes/images/bank.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoSphere">
            <sphere r="1" slices="50    " stacks="50" />
        </primitive>
        <primitive id="demoTorus">
            <torus r1="2" r2="1" slices="80" loops="30" />
        </primitive>
        <primitive id="ring">
            <torus r1="1" r2="0.05" slices="80" loops="30" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder r1="1" r2="1" height="4" slices="50" stacks="10" />
        </primitive>
        <primitive id="demoCone">
            <cylinder r1="1" r2="0" height="1" slices="50" stacks="10" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1='0' y1='0' z1='2' x2='5' y2='0' z2='-1' x3='2' y3='2' z3='0' />
        </primitive>
    </primitives>

    <components>
        
        <component id="background">
            <transformation>
                <translate x="0" y="0" z="-10" />
                <scale x="10" y="10" z="1" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="demoTexture3"/>
            <children>
                <primitiveref id='demoRectangle' />
            </children>
        </component>

        <component id="planet">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id='demoSphere' />
                <componentref id='ring1' />
                <componentref id='ring2' />
            </children>
        </component>

        <component id="ring">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="2" y="2" z="0.01" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id='ring' />
            </children>
        </component>

        <component id="ring2">
            <transformation>
                <rotate axis="x" angle="-10" />
                <rotate axis="y" angle="-10" />
                <rotate axis="z" angle="-10" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id='ring' />
            </children>
        </component>

        <component id="ring1">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id='ring' />
            </children>
        </component>

        <component id="planet1">
            <transformation>
                <translate x="3" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture2"/>
            <children>
                <componentref id='planet' />
            </children>
        </component>

        <component id="planet2">
            <transformation>
                <translate x="-2" y="-1" z="0" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id='planet' />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id='background'/>
                <componentref id='planet1'/>
                <componentref id='planet2'/>
            </children>
        </component>

    </components>
</lxs>